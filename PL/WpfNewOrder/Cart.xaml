<Window x:Class="PL.WpfNewOrder.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WpfNewOrder"
        mc:Ignorable="d"
        Title="Cart" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="781*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="Items" Grid.Row ="0" ItemsSource="{Binding}" Margin="17,0,125,0" Height="371" VerticalAlignment="Top" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID of order" DisplayMemberBinding="{Binding Path= m_ID}" Width="80"/>
                    <GridViewColumn Header="ID of product:" DisplayMemberBinding="{Binding Path= m_IdProduct}" Width="80"/>
                    <GridViewColumn Header="Name:" DisplayMemberBinding="{Binding Path= m_NameProduct}" Width="150"/>
                    <GridViewColumn Header="Price:" DisplayMemberBinding="{Binding Path= m_PriceProduct}" Width="80"/>
                    <GridViewColumn Header="Amount in cart:" DisplayMemberBinding="{Binding Path= m_AmountInCart}" Width="100"/>
                    <GridViewColumn Header="Total Price Item:" DisplayMemberBinding="{Binding Path= m_TotalPriceItem}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Create Order" HorizontalAlignment="Left" Margin="661,55,0,0" VerticalAlignment="Top" Width="102" Height="56" Grid.Column="1"/>
        <Button Content="Make Empy" HorizontalAlignment="Left" Margin="661,315,0,0" VerticalAlignment="Top" Width="102" Height="56" Grid.Column="1"/>
        <Button Name="Back" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="35" Height="29" Click="Click_buttonBack" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="179.451"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBlock x:Name="Totul_Price_Of_The_Cart" Grid.Column="1" HorizontalAlignment="Left" Margin="39,376,0,0" TextWrapping="Wrap" Text="Totul Price Of The Cart:" VerticalAlignment="Top" Height="32" Width="158"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="189,376,0,0" TextWrapping="Wrap" Text="{Binding Path=m_TotalPrice}"  VerticalAlignment="Top" Width="62"/>
    </Grid>
</Window>
