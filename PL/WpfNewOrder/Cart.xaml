<Window x:Class="PL.WpfNewOrder.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WpfNewOrder"
        mc:Ignorable="d"
        Title="Cart" Height="495" Width="900">
    <Window.Resources>
        <Style x:Key="myButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Sylfaen" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="64" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="#FFC6A67D" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="Grid.Column" Value="1" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/WpfNewOrder/image (2).png"/>
        </Grid.Background>

        <ListView x:Name="Items" Grid.Row ="0" BorderBrush="#FF6B641F"  FontSize="18" ItemsSource="{Binding}" Margin="30,34,185,0" Height="337" VerticalAlignment="Top" Background="{x:Null}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID of order" DisplayMemberBinding="{Binding Path= m_ID}" Width="100"/>
                    <GridViewColumn Header="Name:" DisplayMemberBinding="{Binding Path= m_NameProduct}" Width="250"/>
                    <GridViewColumn Header="Price:" DisplayMemberBinding="{Binding Path= m_PriceProduct}" Width="80"/>
                    <GridViewColumn Header="Amount in cart:" DisplayMemberBinding="{Binding Path= m_AmountInCart}" Width="150"/>
                    <GridViewColumn Header="Price of Item:" DisplayMemberBinding="{Binding Path= m_TotalPriceItem}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Create Order" Margin="744,48,0,0" Style="{StaticResource myButtonStyle}" Height="56" Width="102" Click="Confir_Order"/>
        <Button Content="Make Empy" Margin="744,294,0,0" Style="{StaticResource myButtonStyle}" Height="56" Width="102" Click="Make_Empy_Click"/>
        <Button Name="Back" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="29" Click="Click_buttonBack" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-179.714"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/WPFOrderTacking/חץץ.jpg"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="Totul_Price_Of_The_Cart" HorizontalAlignment="Left" Margin="40,397,0,0" TextWrapping="Wrap" Text="Totul Price Of The Cart:" VerticalAlignment="Top" Height="32" Width="203" FontFamily="Segoe UI Variable Display Semibold" FontSize="18" FontWeight="Bold"/>
        <local:NumericUpDownControl x:Name="gradeNumUpDown" Margin="744,166,-54,256" RenderTransformOrigin="0.036,0.659" />
        <Button x:Name="updateGrageButton" Content="update Amount" Click="updateAmountButton_Click" Margin="744,202,0,0" Style="{StaticResource myButtonStyle}" Width="102" Height="48" FontSize="14"/>
        <TextBlock Name="Totul_Price" HorizontalAlignment="Left" Margin="243,397,0,0" TextWrapping="Wrap" Text="{Binding Path = m_TotalPrice,Mode=TwoWay}"  VerticalAlignment="Top" Width="62" FontFamily="Segoe UI Variable Display Semibold" FontSize="18" FontWeight="Bold" Height="27"/>
    </Grid>
</Window>
