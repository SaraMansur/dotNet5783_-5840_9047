<Window x:Class="PL.WpfNewOrder.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WpfNewOrder"
        mc:Ignorable="d"
        Title="Cart" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="myButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#FF898E25" />
            <Setter Property="FontFamily" Value="Sylfaen" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Width" Value="102" />
            <Setter Property="Height" Value="56" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="#FF898E25" />
            <Setter Property="Grid.Column" Value="1" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/WpfNewOrder/v745-kul-39.jpg"/>
        </Grid.Background>

        <ListView x:Name="Items" Grid.Row ="0" BorderBrush="#FF6B641F"  FontSize="16" ItemsSource="{Binding}" Margin="17,34,185,0" Height="337" VerticalAlignment="Top" Grid.Column="1" Background="{x:Null}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID of order" DisplayMemberBinding="{Binding Path= m_ID}" Width="100"/>
                    <GridViewColumn Header="Name:" DisplayMemberBinding="{Binding Path= m_NameProduct}" Width="120"/>
                    <GridViewColumn Header="Price:" DisplayMemberBinding="{Binding Path= m_PriceProduct}" Width="80"/>
                    <GridViewColumn Header="Amount in cart:" DisplayMemberBinding="{Binding Path= m_AmountInCart}" Width="120"/>
                    <GridViewColumn Header="Total Price of Item:" DisplayMemberBinding="{Binding Path= m_TotalPriceItem}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Create Order" Margin="638,44,0,0" Style="{StaticResource myButtonStyle}" Grid.Column="1" Height="56" Width="102" Click="Confir_Order"/>
        <Button Content="Make Empy" Margin="633,278,0,0" Style="{StaticResource myButtonStyle}" Height="56" Width="102" Click="Make_Empy_Click"/>
        <Button Name="Back" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="29" Click="Click_buttonBack" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-179.714"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/WPFOrderTacking/חץץ.jpg"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="Totul_Price_Of_The_Cart" HorizontalAlignment="Left" Margin="39,376,0,0" TextWrapping="Wrap" Text="Totul Price Of The Cart:" VerticalAlignment="Top" Height="32" Width="181" FontFamily="Segoe UI Variable Display Semibold" FontSize="16" FontWeight="Bold"/>
        <local:NumericUpDownControl x:Name="gradeNumUpDown" Margin="648,168,60,218" RenderTransformOrigin="0.036,0.659" />
        <Button x:Name="updateGrageButton" Content="update Amount" Click="updateAmountButton_Click" Margin="638,202,0,0" Style="{StaticResource myButtonStyle}" Width="102" Height="48" FontSize="14"/>
        <TextBlock Name="Totul_Price" HorizontalAlignment="Left" Margin="203,376,0,0" TextWrapping="Wrap" Text="{Binding Path = m_TotalPrice,Mode=TwoWay}"  VerticalAlignment="Top" Width="62" FontFamily="Segoe UI Variable Display Semibold" FontSize="16" FontWeight="Bold" Height="19"/>
    </Grid>
</Window>
