<Window x:Class="PL.WpfNewOrder.createNewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WpfNewOrder"
        mc:Ignorable="d"
        Title="createNewOrder" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" Height="auto" Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions >
            <ComboBox Grid.Row="0" SelectedIndex="0" Grid.Column="0" Name="GroupBy" SelectionChanged="GroupBy_SelectionChanged" Margin="0,0,111,0" />
            <Button x:Name="Cart" Grid.Column="1" Content="Cart" Margin="0,-5,27,5" Width="123" HorizontalAlignment="Right" Click="Cart_Click"/>

        </Grid>
        <ListView Name="ProductItems" Grid.Row="1" ItemsSource="{Binding}"  SelectionChanged="ProductItems_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="130" DisplayMemberBinding="{Binding m_ID}" />
                    <GridViewColumn Header="Name" Width="140" DisplayMemberBinding="{Binding m_NameProduct}" />
                    <GridViewColumn Header="Price" Width="130" DisplayMemberBinding="{Binding m_PriceProduct}" />
                    <GridViewColumn Header="Caregory" Width="130" DisplayMemberBinding="{Binding Category }" />
                    <GridViewColumn Header="In Stock" Width="130" DisplayMemberBinding="{Binding m_InStock}" />
                    <GridViewColumn Header="Amount In Cart" Width="140" DisplayMemberBinding="{Binding m_AmountInCart}" />
                </GridView>
            </ListView.View>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}" Foreground="#FF898E25" FontFamily="Sylfean"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
    </Grid>
</Window>
